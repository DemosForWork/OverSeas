<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_add_card"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/dp30"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp24"
        android:text="you can ask the requester
additional question or skip to notify
requester that you are interest"
        />
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lay_question"
        android:orientation="vertical">
        <include layout="@layout/item_response_question"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_response_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginTop="26dp"
        android:layout_marginRight="@dimen/dp32"
        android:background="@mipmap/iv_add"
        android:layout_marginBottom="@dimen/dp15"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp24"
        android:text="Skip"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginTop="26dp"
        android:layout_marginRight="@dimen/dp32"
        android:background="@drawable/shape_add_card"
        android:layout_marginBottom="@dimen/dp15"
        android:text="Submit"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="@dimen/dp15"
        />
</LinearLayout>
</ScrollView>
