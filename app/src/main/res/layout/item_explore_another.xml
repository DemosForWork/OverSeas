<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginTop="55dp"
            android:src="@mipmap/iv_dot_item" />

        <View
            android:id="@+id/view_2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_below="@+id/image"
            android:layout_marginLeft="45dp"
            android:background="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp21"
        android:layout_toRightOf="@+id/rl_1"
        android:background="@mipmap/bg_item_explore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp7"
                android:layout_marginTop="@dimen/dp7"
                android:text="Looking for used exeavator"
                android:textColor="@color/black"
                android:textSize="@dimen/dp12"
                android:textStyle="bold"
                android:id="@+id/explore_item_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:layout_marginLeft="@dimen/dp7"
                android:layout_marginTop="@dimen/dp10"
                android:text="TEE BOON"
                android:textColor="@color/black"
                android:textSize="@dimen/dp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginTop="@dimen/dp30"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7 days ago"
                    android:textColor="@color/black"
                    android:maxEms="11"
                    android:id="@+id/tv_time"
                    android:textSize="@dimen/dp10" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_detail"
                    android:background="@drawable/shape_view_detail"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="View Detail"
                    android:textSize="@dimen/dp15" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>